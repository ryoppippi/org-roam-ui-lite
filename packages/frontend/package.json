{
	"name": "@org-roam-ui-lite/frontend",
	"private": true,
	"type": "module",
	"scripts": {
		"dev": "bun build --watch ./src/index.html --outdir ./dist",
		"prebuild": "openapi-typescript ../../openapi.yaml --output ./src/api.d.ts && biome format --write ./src/api.d.ts",
		"build": "bun build ./src/index.html --outdir ./dist",
		"lint": "biome check src/*.{css,ts,html} *.json",
		"lint:fix": "biome check --fix src/*.{css,ts,html} *.json",
		"check": "tsc"
	},
	"dependencies": {
		"@alpinejs/persist": "^3.14.9",
		"@rehype-pretty/transformers": "^0.13.2",
		"alpinejs": "^3.14.9",
		"bootstrap": "^5.3.5",
		"bootstrap-icons": "^1.11.3",
		"cytoscape": "^3.31.4",
		"openapi-fetch": "^0.13.5",
		"rehype-class-names": "^2.0.0",
		"rehype-mathjax": "^7.1.0",
		"rehype-mermaid": "^3.0.0",
		"rehype-parse": "^9.0.1",
		"rehype-pretty-code": "^0.14.1",
		"rehype-raw": "^7.0.0",
		"rehype-stringify": "^10.0.1",
		"unified": "^11.0.5",
		"uniorg-parse": "^3.2.0",
		"uniorg-rehype": "^2.2.0"
	},
	"devDependencies": {
		"@biomejs/biome": "2.0.0-beta.2",
		"@types/alpinejs": "^3.13.11",
		"@types/alpinejs__persist": "^3.13.4",
		"@types/bootstrap": "^5.2.10",
		"bun": "^1.2.13",
		"openapi-typescript": "^7.6.1",
		"typescript": "^5.8.3",
		"vyb": "^0.0.0"
	}
}
