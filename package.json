{
	"name": "org-roam-ui-lite",
	"private": true,
	"type": "module",
	"workspaces": [
		"packages/*"
	],
	"devDependencies": {
		"@biomejs/biome": "^2.0.0-beta.2",
		"lefthook": "^1.11.12",
		"license-checker": "^25.0.1",
		"npm-run-all": "^4.1.5",
		"slugify": "^1.6.6",
		"tsx": "^4.19.4",
		"zx": "^8.5.3"
	},
	"scripts": {
		"postversion": "nix run .#update-npm-deps-hash && git add flake.nix && git commit -m \"ci: update npm-deps hash\"",
		"build": "npm run build --workspaces && tsx ./scripts/build.ts",
		"export": "npm run build && tsx ./scripts/export.ts",
		"dev": "run-p dev:frontend dev:backend",
		"dev:frontend": "npm --workspace=packages/frontend run dev",
		"dev:backend": "npm --workspace=packages/backend run dev",
		"lint": "biome check **/*.ts *.{json,yaml} && npm run lint --workspaces",
		"lint:fix": "biome check --fix **/*.ts *.{json,yaml} && npm run lint:fix --workspaces",
		"check": "npm run check --workspaces",
		"test": "npm run test --workspaces"
	},
	"version": "0.0.18"
}
