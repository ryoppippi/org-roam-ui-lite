{
	"name": "org-roam-ui-lite",
	"private": true,
	"type": "module",
	"workspaces": [
		"packages/*"
	],
	"devDependencies": {
		"@biomejs/biome": "^2.0.0-beta.2",
		"@types/bun": "^1.2.13",
		"@types/license-checker": "^25.0.6",
		"bun": "^1.2.13",
		"lefthook": "^1.11.12",
		"license-checker": "^25.0.1",
		"npm-run-all": "^4.1.5"
	},
	"scripts": {
		"version": "nix run .#update-npm-deps-hash && git add flake.nix",
		"build": "npm run build --workspaces && bun ./scripts/build.ts",
		"export": "npm run build && bun ./scripts/export.js -r ./dist",
		"dev": "npm-run-all -p dev:frontend 'dev:backend -- {@}' --",
		"dev:frontend": "npm --workspace=packages/frontend run dev --",
		"dev:backend": "npm --workspace=packages/backend run dev --",
		"lint": "biome check",
		"lint:fix": "biome check --fix",
		"check": "tsc"
	},
	"version": "0.0.39"
}
