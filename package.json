{
	"name": "org-roam-ui-lite",
	"private": true,
	"type": "module",
	"workspaces": [
		"packages/*"
	],
	"devDependencies": {
		"@biomejs/biome": "^2.1.4",
		"@testing-library/jest-dom": "^6.6.4",
		"@testing-library/react": "^16.3.0",
		"@types/cytoscape": "^3.19.16",
		"@types/hast": "^3.0.4",
		"@types/jest": "^30.0.0",
		"@types/license-checker": "^25.0.6",
		"@types/mime-types": "^3.0.1",
		"@types/node": "^24.0.10",
		"@types/react": "^19.1.10",
		"@types/react-dom": "^19.1.7",
		"@types/sql.js": "^1.4.9",
		"@typescript/native-preview": "^7.0.0-dev.20250813.1",
		"@vitejs/plugin-react": "^5.0.0",
		"@vitest/coverage-v8": "^3.2.4",
		"@vitest/ui": "^3.2.4",
		"jiti": "^2.4.2",
		"jsdom": "^26.1.0",
		"lefthook": "^1.11.12",
		"license-checker": "^25.0.1",
		"npm-run-all": "^4.1.5",
		"openapi-typescript": "^7.8.0",
		"tsdown": "^0.12.9",
		"typescript": "^5.9.2",
		"vite": "^7.1.2",
		"vitest": "^3.2.4"
	},
	"scripts": {
		"version": "nix run .#update-npm-deps-hash && git add flake.nix",
		"prebuild": "jiti openapi.ts | tee packages/frontend/src/api/api.d.ts packages/backend/src/api.d.ts > /dev/null && biome format --write packages/frontend/src/api/api.d.ts packages/backend/src/api.d.ts",
		"build": "npm run build --workspaces && jiti ./scripts/build.ts",
		"export": "npm run build && node ./scripts/export.js -r ./dist",
		"dev": "npm-run-all -p dev:frontend 'dev:backend -- {@}' --",
		"dev:frontend": "npm --workspace=packages/frontend run dev --",
		"dev:backend": "npm --workspace=packages/backend run dev --",
		"lint": "biome check .",
		"lint:fix": "biome check --write .",
		"check": "tsgo",
		"test": "vitest",
		"test:ui": "vitest --ui"
	},
	"version": "0.2.1"
}
