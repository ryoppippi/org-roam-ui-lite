{
	"name": "org-roam-ui-lite",
	"private": true,
	"workspaces": [
		"packages/*"
	],
	"devDependencies": {
		"@biomejs/biome": "^2.0.0-beta.2",
		"license-checker": "^25.0.1",
		"npm-run-all": "^4.1.5",
		"slugify": "^1.6.6",
		"zx": "^8.5.3"
	},
	"scripts": {
		"build": "npm run build --workspaces && zx build.mjs",
		"dev": "run-p dev:client dev:server",
		"dev:client": "npm --workspace=packages/client run dev",
		"dev:server": "npm --workspace=packages/server run dev",
		"lint": "biome check *.{json,mjs,yaml} && npm run lint --workspaces",
		"lint:fix": "biome check --fix *.{json,mjs,yaml} && npm run lint:fix --workspaces",
		"check": "npm run check --workspaces",
		"test": "npm run test --workspaces"
	}
}
